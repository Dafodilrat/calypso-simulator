    </inertial> -->
    
    <inertial>
      <mass value="2000.775"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
  </link>

  </xacro:macro>

</robot>